@model List<Hirent.Models.Product>

@foreach (var item in Model)
{
    <div class="single-blog-post featured-post mb-30">
        <div class="post-thumb">
            <a href="/Home/News/@item.Id"><img src="@item.ImageSource" alt=""></a>
            @*<a href="#"><img src="@item.ImageSource" alt=""></a>*@
        </div>
        <div class="post-data">
            @*@item.Name*@
            <a href="/Home/News/@item.Id" class="post-title">
                <h6>@item.Name</h6>
            </a>
            <div class="post-meta">
                @* <p class="post-author">By <a href="#">Christinne Williams</a></p>*@
                @*<p class="post-excerp">@(item.Content.Length>200?item.Content.Substring(0,200):item.Content)</p>*@
                <!-- Post Like & Post Comment -->
            </div>
        </div>
    </div>
}